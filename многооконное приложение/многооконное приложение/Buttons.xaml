<Window x:Class="многооконное_приложение.Buttons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:многооконное_приложение"
        mc:Ignorable="d"
        Title="Кнопки" Height="200" Width="250" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.ColumnSpan="2" Style="{DynamicResource 2}">Hello, world</Label>
        <Button Style="{DynamicResource 1}" Click="btnYas_Click" Grid.Row="1" Width="70">Да</Button>
        <Button Style="{DynamicResource 1}" Click="btnNo_Click" Grid.Row="1" Grid.Column="1" Width="70">Нет</Button>
        <Button Style="{DynamicResource 1}" Click="btnCansel_Click" Grid.Row="2" Width="70">Отмена</Button>
        <Button Style="{DynamicResource 1}" Click="btnOK_Click" Grid.Row="2" Grid.Column="2" Width="70">ОК</Button>
    </Grid>
</Window>
