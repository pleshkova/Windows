<Window x:Class="многооконное_приложение.Header"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:многооконное_приложение"
        mc:Ignorable="d"
        Title="Заголовок" Height="100" Width="200" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource 2}">Hello, world</Label>
        <Button Style="{DynamicResource 1}" Grid.Row="1" Width="70" Click="btnOK_Click">OK</Button>
    </Grid>
</Window>
